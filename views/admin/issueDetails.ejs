<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/train.png" type="image/png" />

    <title>Issue Details</title>
    <!-- Bootstrap -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-100 flex flex-col justify-center items-center h-screen">
    <div class="bg-white p-6 rounded-lg shadow-md w-full max-w-lg">
      <h5 class="text-2xl font-semibold mb-6 text-center">
        Issue Report Details
      </h5>
      <div class="space-y-4">
        <div class="flex justify-between">
          <label class="font-semibold">Type:</label>
          <input
            type="text"
            class="form-control border-gray-300 w-2/3 rounded-md"
            value="<%= issue.category %>"
            disabled
          />
        </div>
        <div class="flex justify-between">
          <label class="font-semibold">Sub type:</label>
          <input
            type="text"
            class="form-control border-gray-300 w-2/3 rounded-md"
            value="<%= issue.department %>"
            disabled
          />
        </div>
        <div class="flex justify-between">
          <label class="font-semibold">Station:</label>
          <input
            type="text"
            class="form-control border-gray-300 w-2/3 rounded-md"
            value="<%= issue.station %>"
            disabled
          />
        </div>
        <div class="flex justify-between">
          <label class="font-semibold">Platform:</label>
          <input
            type="text"
            class="form-control border-gray-300 w-2/3 rounded-md"
            value="<%= issue.platform %>"
            disabled
          />
        </div>
        <div class="flex justify-between">
          <label class="font-semibold">Date:</label>
          <input
            type="text"
            class="form-control border-gray-300 w-2/3 rounded-md"
            value="<%= issue.createdAt %>"
            disabled
          />
        </div>
        <div class="flex justify-between">
          <label class="font-semibold">PNR Number:</label>
          <input
            type="text"
            class="form-control border-gray-300 w-2/3 rounded-md"
            value="<%= issue.pnrNo %>"
            disabled
          />
        </div>
      </div>

      <div class="mt-6 text-center">
        <a
          href="#"
          class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition"
          >View Full Details</a
        >
        <a
          href="#"
          class="bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 transition"
          >Contact Support</a
        >
      </div>

      <!-- Images Section -->
      <div class="mt-6">
        <h5 class="text-lg font-semibold mb-4 text-center">Attached Images</h5>
        <div class="grid grid-cols-2 gap-4">
          <% images.forEach(function(image, index) { %>
          <div class="mb-4">
            <img
              src="<%= image %>"
              class="w-full h-32 object-cover rounded-md"
              alt="Image of Issue <%= index + 1 %>"
            />
          </div>
          <% }) %>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <%-include('../footer.ejs')%>
  </body>
</html>
