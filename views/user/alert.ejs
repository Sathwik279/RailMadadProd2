<% if (alertMessage) { %>
    <div
      id="alertMessage"
      class="alert alert-success bg-green-100 border border-green-400 text-green-700 px-4 py-3 my-5 rounded relative"
      role="alert"
    >
      <span class="block sm:inline"><%= alertMessage %></span>
      <button
        id="closeAlert"
        class="absolute top-0 right-0 mt-2 mr-3 text-gray-700 hover:text-gray-900"
      >
        &times;
        <!-- Close icon -->
      </button>
    </div>
    <script>
      // Attach click event listener to the close button
      document.getElementById("closeAlert").addEventListener("click", () => {
        const alertElement = document.getElementById("alertMessage");
        if (alertElement) {
          alertElement.style.transition = "opacity 0.5s ease-out";
          alertElement.style.opacity = "0";
          setTimeout(() => alertElement.remove(), 500); // Remove after fade-out
        }
      });
    </script>
    <% } %>