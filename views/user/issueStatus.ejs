<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rail Madad User Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      function deleteTodo(id) {
        fetch(`/issues/${id}`, {
          method: "delete",
          headers: { "Content-Type": "application/json" },
        })
          .then((res) => {
            if (res.ok) {
              window.location.reload(); //this line ensures page reload after deletion
            }
          })
          .catch((err) => console.error(err));
      }
    </script>
  </head>
  <body class="bg-gray-100 min-h-screen flex flex-col"></body>
 <%-include('../sideBars/userSide.ejs')%>
 <!-- Section: issues posted by the user -->
  <%-include('alert.ejs')%>
  <div class="bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 shadow-md rounded-lg p-6 mt-6">
    <div id="count-issues" class="text-lg text-white">
      You have posted <span class="font-semibold text-yellow-300"><%= issues.length %></span> issues.
    </div>
  </div>
  <table class="table-auto w-full mt-8 mb-6">
    <thead>
      <tr class="bg-gray-200">
        <th class="px-6 py-3 text-left text-gray-700 font-semibold">
          Title
        </th>
        <th class="px-6 py-3 text-left text-gray-700 font-semibold">
          Description
        </th>
        <th class="px-6 py-3 text-left text-gray-700 font-semibold">
          Created Date
        </th>
        <th class="px-6 py-3 text-left text-gray-700 font-semibold">
          Completion Status
        </th>
        <th class="px-6 py-3 text-left text-gray-700 font-semibold">
          Delete the issue
        </th>
      </tr>
    </thead>
    <tbody>
      <%- include('../issue.ejs') %>
    </tbody>
  </table>
</body>
</html>